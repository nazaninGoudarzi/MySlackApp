<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nazanintorabigoudarzi.detf.android.com.mythirdapp.Full_Information"
    android:background="@drawable/splash">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />
    <TextView
        android:id="@+id/textViewName"
        android:layout_width="272dp"
        android:layout_height="53dp"
        tools:layout_editor_absoluteY="7dp"
        tools:layout_editor_absoluteX="108dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

    <TextView
        android:id="@+id/textViewTitle2"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/circleView1"
        android:layout_marginLeft="63dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="39dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

    <TextView
        android:id="@+id/textViewTags2"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textViewTitle2"
        android:layout_alignLeft="@+id/textViewTitle2"
        android:layout_alignStart="@+id/textViewTitle2" />

    <TextView
        android:id="@+id/textViewVC"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/textViewTags2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewScore"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textViewVC"
        android:layout_alignBottom="@+id/textViewVC"
        android:layout_alignRight="@+id/textViewTags2"
        android:layout_alignEnd="@+id/textViewTags2" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Proceed in web"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
